.aim
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  background transparent
  z-index 50
  transform: translate3d(0, 0, 0);
  
  .c
    position absolute
    top 0
    left 0
    width 11px
    height 11px
    background #000
    margin -4px 0 0 -4px
    transform rotate(45deg)
    border 1px solid #77f
  
  .h
    position absolute
    top 1px
    left -50%
    width 200%
    height 1px
    background #fff
    opacity .2
    
  .v
    position absolute
    top -50%
    left 1px
    width 1px
    height 200%
    background #fff
    opacity .2